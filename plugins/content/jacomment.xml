	<author>JoomlArt.com</author>
	<creationDate>Dec 2009</creationDate>
    <copyright>Copyright (C) Copyright Â© 2005 - 2009 JoomlArt.com. All rights reserved.</copyright>
	<authorEmail>webmaster@joomlart.com</authorEmail>
	<authorUrl>www.joomlart.com</authorUrl>
	<version>1.0.1 Beta</version>
	<description>JA Comment</description>
	<files>
		<filename plugin="jacomment">jacomment.php</filename>
		<folder>jacomment</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_jacomment.ini</language>
	</languages>
	<params addpath="/plugins/content/jacomment/elements">
 		<param name="postion_add_button" type="list" default="1" label="Position of add new button" description="Position of add new button">
            <option value="0">Before content ads</option>
			<option value="1">Content top ads</option>                        
			<option value="2">Content bottom ads</option>
			<option value="3">After content ads</option>            
        </param>
		<param name="catsid" type="japaramhelper" subtype="categories" default="" label="Select categories" description="Select categories desc" />
        <param name="menusid" type="japaramhelper" subtype="menus" default="" label="Select menus" description="Select menus desc" />
        <param name="display_comment_link" type="radio" default="1" label="Display comment link" description="Display comment link desc">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </param>
        <param name="display_comment_count" type="radio" default="1" label="Display comment count" description="Display comment count desc">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </param>
	</params>
</install>