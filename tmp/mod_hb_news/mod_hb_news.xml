<install type="module" version="1.5.0">
    <name>VXG Latest News</name>
    <author>Nguyen Thanh Tinh</author>
    <authorEmail>thtinh@vxg.vn</authorEmail>
    <authorUrl>thtinh@vxg.vn</authorUrl>
    <version>1.0.0</version>
    <creationDate>Sept 2010</creationDate>
    <description>Module for Hoa Binh's Section News </description>
    <copyright>(C) 2008-2010 VXG Group Ltd. http://www.vxg.vn/</copyright>
    <files>
        <filename module="mod_hb_news">mod_hb_news.php</filename>
        <filename module="mod_hb_news">mod_hb_news.xml</filename>
        <filename module="mod_hb_news">tmpl/default.php</filename>
    </files>
    <params>
        <param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="A suffix to be applied to the css class of the module (table.moduletable), this allows individual module styling" />
        <param name="catid" type="text" default="" label="Category ID" />
        <param name="trimtext" type="text" default="0" label="Limit text" description="Enter a number or 0 to disable" />
        <param name="showthumbnail" type="list" default="1" label="Show Thumbnail">
                <option value="1">Yes</option>
                <option value="0">No</option>
        </param>
        <param name="limit" type="text" default="5" label="Limit" />
    </params>
</install>